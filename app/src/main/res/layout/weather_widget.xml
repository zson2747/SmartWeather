<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="170dp"
    android:layout_height="100dp">

    <TextView
        android:id="@+id/TimeTitle"
        android:layout_width="50dp"
        android:layout_height="12dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="1dp"
        android:layout_toStartOf="@+id/LocationTitle"
        android:text="Time:"
        android:textAlignment="viewStart"
        android:textSize="8sp" />
    <TextView
        android:id="@+id/DateTitle"
        android:layout_width="50dp"
        android:layout_height="12dp"
        android:text="Date:"
        android:layout_below="@+id/Time"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/WeatherTitle"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="1dp"
        android:textAlignment="viewStart"
        android:textSize="8sp" />
    <TextView
        android:id="@+id/LocationTitle"
        android:layout_width="50dp"
        android:layout_height="12dp"
        android:text="Location:"
        android:layout_toStartOf="@+id/UmbrellaTitle"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="1dp"
        android:textAlignment="viewStart"
        android:textSize="8sp" />
    <TextView
        android:id="@+id/WeatherTitle"
        android:layout_width="50dp"
        android:layout_height="12dp"
        android:text="Weather:"
        android:layout_below="@+id/Location"
        android:layout_toStartOf="@+id/ClothRecommendationTitle"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="1dp"
        android:textAlignment="viewStart"
        android:textSize="8sp" />
    <TextView
        android:id="@+id/UmbrellaTitle"
        android:layout_width="50dp"
        android:layout_height="12dp"
        android:text="Umbrella:"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="1dp"
        android:textAlignment="viewStart"
        android:textSize="8sp" />
    <TextView
        android:id="@+id/ClothRecommendationTitle"
        android:layout_width="50dp"
        android:layout_height="12dp"
        android:text="Cloth:"
        android:layout_below="@+id/Umbrella"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="1dp"
        android:textAlignment="viewStart"
        android:textSize="8sp" />
    <TextView
        android:id="@+id/Time"
        android:layout_width="50dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/TimeTitle"
        android:layout_toStartOf="@+id/Location"
        android:text="Time"
        android:layout_marginStart="5dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="2dp"
        android:textAlignment="viewStart"
        android:textSize="10dp" />
    <TextView
        android:id="@+id/Date"
        android:layout_width="50dp"
        android:layout_height="32dp"
        android:text="Date"
        android:layout_below="@+id/DateTitle"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/Weather"
        android:layout_marginStart="5dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:textAlignment="viewStart"
        android:textSize="9dp" />
    <TextView
        android:id="@+id/Location"
        android:layout_width="50dp"
        android:layout_height="32dp"
        android:text="Location"
        android:layout_below="@+id/LocationTitle"
        android:layout_toStartOf="@+id/Umbrella"
        android:layout_marginStart="5dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="2dp"
        android:textAlignment="viewStart"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/Weather"
        android:layout_width="50dp"
        android:layout_height="32dp"
        android:text="Weather"
        android:layout_below="@+id/WeatherTitle"
        android:layout_toStartOf="@+id/ClothRecommendation"
        android:layout_marginStart="5dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:textAlignment="viewStart"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/Umbrella"
        android:layout_width="50dp"
        android:layout_height="32dp"
        android:text="Umbrella"
        android:layout_below="@+id/UmbrellaTitle"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="2dp"
        android:textAlignment="viewStart"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/ClothRecommendation"
        android:layout_width="50dp"
        android:layout_height="32dp"
        android:text="Recommendation"
        android:layout_below="@+id/ClothRecommendationTitle"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:textAlignment="viewStart"
        android:textSize="14sp" />

</RelativeLayout >